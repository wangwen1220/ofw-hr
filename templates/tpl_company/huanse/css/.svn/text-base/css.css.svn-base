/*--------top-------*/
.jobstop{ width:960px; height:180px; margin:0 auto;background-image: url(../images/huansetop.jpg); background-repeat:no-repeat;padding-top:50px;}
.jobstop .t{ padding-left:40px;}
.jobstop .t h1{font-size:30px; font-family:"黑体";float:left;}
.jobstop .t .date{font-size:12px; padding-top:8px; color: #FF3300}
.jobstop .nav{ width:960px; height:30px; margin-top:73px; text-align:right;}
.jobstop .nav li{padding-right:30px; color:#FFFFFF; float:right;line-height:30px; font-size:14px; font-weight:bold}
.link_red a{color: #FF3300;	text-decoration: none;text-decoration: none;}
.link_red a:hover {text-decoration: underline;}
/*--------企业展示-------*/
.company-show {width:960px; margin:0 auto; background-color:#CC0001;}
.company-show  .left{width: 225px; float:left}
.company-show  .left .tit{width: 200px; height:25px; background-color:#FFB21C; padding-left:25px; line-height:25px; font-size:12px; color:#CC0000}
.company-show  .left .txt{width: 200px; padding-left:25px; font-size:12px; color:#FFFFFF; margin-top:10px; line-height:220%;word-wrap:break-word;}

.company-show  .right{width:720px; float:left; background-color:#FFFFFF; padding-left:15px; line-height:180%}
.company-show  .right .title{  height:29px; line-height:29px;font-size:12px; color: #CC3300;background:url(../images/titbg.gif) no-repeat; margin-bottom:10px; margin-top:5px; padding-left:18px;}
.company-show  .right .txt{ padding-bottom:15px; text-indent:2em;word-wrap:break-word;} 
.company-show  .right .listtit{ font-weight:bold}
.company-show  .right .list{ border-bottom:1px  #CCCCCC dashed}
.company-show  .right .contact{ padding:3px; border:1px   #FF9900 solid; background-color: #FDFBF0; padding-left:8px;}
/*--------职位部分-------*/
.company-show  .right .tip{ color: #0066CC; padding-top:3px; padding-bottom:10px;}
.company-show  .right .item li{width:350px; float:left; height:26px; line-height:26px;}
.company-show  .right .share{ text-align:center; padding:10px; padding-left:180px;}
/*--------营业执照图标-------*/
.company_license1{background:url(../images/1.gif) no-repeat 0px 0px; width:38px; height:24px; margin-top:5px; margin-left:5px; float:left}
.company_license2{background:url(../images/1.gif) no-repeat 0px -25px;width:38px; height:24px;margin-top:5px; margin-left:5px; float:left}
.company_license3{background:url(../images/1.gif) no-repeat 0px -51px;width:23px; height:18px;margin-top:0px; margin-left:5px; float:left}
.company_license4{background:url(../images/1.gif) no-repeat 0px -72px;width:23px; height:18px;margin-top:0px; margin-left:5px; float:left}