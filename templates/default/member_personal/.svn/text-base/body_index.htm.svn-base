<script>
$(document).ready(function(){
//	dialog("系统消息","text:"+$("#none2").html(),"500px","auto","");//简历不完整
//	dialog("系统消息","text:"+$("#none3").html(),"500px","auto","");//一个月未登录
//	dialog("系统消息","text:"+$("#none1").html(),"500px","auto","");//首次登录
	var time_sep = 0;
	var sep = 3;
	{#if ($login_type&1) == 1#}
		time_sep += sep;
		$.get('{#$QISHI.site_dir#}user/personal/?act=firstlg',function(){});
		setTimeout(function(){dialog("系统消息","text:"+$("#none1").html(),"500px","auto","");},time_sep*1000);
	{#/if#}
	{#if ($login_type&2) == 2#}
		time_sep += sep;
		setTimeout(function(){dialog("系统消息","text:"+$("#none2").html(),"500px","auto","");},time_sep*1000);
	{#/if#}
	{#if ($login_type&4) == 4#}
		time_sep += sep;
		setTimeout(function(){dialog("系统消息","text:"+$("#none3").html(),"500px","auto","");},time_sep*1000);
	{#/if#}

	$('#refresh_resume').click(function(){
		$.get('{#$QISHI.site_dir#}user/personal/?act=refresh',function(data){
//			alert(data);
			if (data != ''){
				$('#refresh_resume').parent().prev().html(data);
				alert('更新成功');
			}
			else{
				alert('更新失败');
			}
		});
	});

	//默认加载
	function page_init(pagenumber){
		//向服务器发送请求，查询满足条件的记录

		$.getJSON('index.php',{'page':pagenumber,'act':'recommend'},function(data){
			//data 为返回json 对象 并包括(pagecount、totalcount)的key-value值;
//			var data = {'pagecount':15,'totalcount':150};
			var table = new String;
			$.each(data.list,function(i,val){
				if(i % 2 == 1){
					table += '<tr class="zwlist">';
				}
				else{
					table += '<tr>';
				}
				table += '<td valign="middle" height="30" align="left" style="padding-left:15px;"><a title="'+val.jobs_name+'" target="_blank" href="{#$QISHI.site_dir#}jobs/jobs-show-'+val.id+'.html">'+val.jobs_name+'</a></td>';
				table += '<td valign="middle" align="left" style="padding-left:15px;"><a title="'+val.companyname+'" target="_blank" href="{#$QISHI.site_dir#}company/company-show-'+val.uid+'.html">'+val.companyname+'</a></td>';
				table += '<td valign="middle" align="center">'+val.district_cn+'</td>';
				table += '<td valign="middle" align="center">'+val.education_cn+'</td>';
				table += '<td valign="middle" align="center">'+val.experience_cn+'</td>';
				table += '<td valign="middle" align="center">'+val.wage_cn+'</td>';
				table += '<td valign="middle" align="center">'+val.refreshtime+'</td>';
				table += '</tr>';

			});
			if(table == ''){
				table = '<span>无数据</span>';
			}
			if(data.totalcount < 10){
				table += '<tr><td colspan="6" align="center">根据您的求职意向匹配的职位非常少，您可以尝试多选择几个意向岗位以及地区</td></tr>'
			}
			$('#list .zhi_w table tbody').html(table);


			$("#pager").pager({ pagenumber: pagenumber, pagecount:data.pagecount,totalcount:data.totalcount, buttonClickCallback: PageClick});
		});
	}

	//回调函数
	PageClick = function(pageclickednumber) {
		page_init(pageclickednumber);
	}

	$('#list .zhi_w table tbody').append('<span>加载中...</span>');
	page_init(1);

});
</script>