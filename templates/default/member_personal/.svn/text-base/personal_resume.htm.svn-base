				'maxlength':'只能输入7位数字'
			},
			'self_evaluation':{
				'maxlength':'请填写少于4000字符'
			},
			'specialty':{
				'maxlength':'请填写少于4000字符'
			}

		}
	});

	$('form').submit(function(){
//		console.log($('form [label=need]'));
		$('#value_industry option').each(function(){this.selected=true;});
		$('#value_category option').each(function(){this.selected=true;});
		$('#value_district option').each(function(){this.selected=true;});
		var sub = true;
		$('form  [label=need]').each(function(){
			//判断元素类型
			var type = this.nodeName.replace(/./g, function(w){return w.toLowerCase();});
			switch(type){
				case 'input':
					if(this.value == ''){
						sub = false;
						alert('请填写完整');
						this.focus();
						return false;
					}
					break;
				case 'select':
				case 'textarea':
					if($(this).val() == '' || $(this).val() == null){
						sub = false;
						alert('请填写完整');
						this.focus();
						return false;
					}
					break;
				default:
					return false;
			}
		});
		return sub;
	});
});
