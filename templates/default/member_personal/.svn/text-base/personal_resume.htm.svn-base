			this.focus();
			return false;
		}
	});
	//验证日期
	$('.s02').each(function(){
		if( $(this).val() == '' || isNaN($(this).val()) ){
			res = 2;
			this.focus();
		}
	})
	//验证薪水
	$('.s04').each(function(){
		if(isNaN($(this).val())){
			res = 3;
			this.focus();
		}
	})
	if (res > 0){
		return res;
	}
	$('[type=checkbox]').each(function(){
		if(this.checked == true){
			$(this).attr('value',1);
		}
		else{
			$(this).attr('checked','checked');
			$(this).attr('value',0);
			$(this).hide();
		}
	});
	$('select').each(function(){
		$(this).removeAttr('disabled');
	});
	return res;
}
