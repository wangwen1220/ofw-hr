}
function delete_table(e){
	var d = $(e).parentsUntil('table').last().parent().next();
	if($(d).next().is('table')){
		$(d).slideUp('fast',function(){
			$(d).remove();
		});
	}
	else if($(d).next().is('span')){
		$(d).slideUp('fast',function(){
			$(d).prev().find(':last').html('继续添加工作经历>>');
			$(d).prev().find(':last').unbind().click(function(){add_table(e);return false;});
			$(d).remove();
		});
	}
	return false;
}
function check_field(e){
	var table = $(e).parentsUntil('table').last().parent();
	var fields = $(table).find('[label=need]');
	var res = 1;
	$(fields).each(function(){
		if($(this).val() == '' || $(this).val() < 0 ){
			res = 0;
			this.focus();
			return false;
		}
	});
	if(!res) return false;
	return true;
}
function check_form(){
	var res = 0;
	//验证need项
	$('[label=need]').each(function(){//字段为空
		if($(this).val() == '' || $(this).val() < 0 ){
