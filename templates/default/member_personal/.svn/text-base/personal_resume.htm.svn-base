//	}
	var table = $(t).clone().hide();
	$(table).find(':last').html('继续添加工作经历>>');//更改
	$(table).find(':last').bind('click',function(){add_table(this);return false;});
	$(table).insertBefore($('#newvouch_2>span'));//插入
