			'self_evaluation':{
				'maxlength':4000
			},
			'specialty':{
				'maxlength':4000
			}
		},
		'messages':{
			'work_status':{
				'checkSelect':'请选择求职状态'
			},
			'time_2work':{
				'checkSelect':'请选择到岗日期'
